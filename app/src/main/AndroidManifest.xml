<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.kip">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/kip_logo"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@drawable/kip_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.KHPI_in_phone"
        android:usesCleartextTraffic="true">
        <activity android:name=".Class_schedule_extended"></activity>
        <activity android:name=".Lecture_schedule_selection" />
        <activity android:name=".Lecturer_schedule" />

        <meta-data
            android:name="com.google.android.actions"
            android:resource="@xml/network_security_config" />

        <activity android:name=".KIP_start" />
        <activity android:name=".Autorization" />
        <activity
            android:name=".Group_activity"
            android:label="@string/title_activity_group_activity"
            android:theme="@style/Theme.KHPI_in_phone.NoActionBar"></activity>
        <activity android:name=".lecture_schedule" />
        <activity android:name=".Class_schedule" />
        <activity android:name=".Schedule_swipe_2"></activity>
        <activity android:name=".Plan_edit" />
        <activity
            android:name=".Main_screen"
            android:label="@string/title_activity_main_screen"
            android:theme="@style/Theme.KHPI_in_phone.NoActionBar" />
        <activity android:name=".main_window" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Schedule_swipe"></activity>
    </application>

</manifest>