<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#39738E"
    android:orientation="vertical"
    tools:context=".MainScreen_page">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="Студент"
        android:textColor="#FFFFFF"
        android:textSize="36sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:layout_weight="0"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/Name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="ФАМИЛИЯ ИМЯ"
            android:textColor="#FFFFFF"
            android:textSize="36sp" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="100"
        android:background="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">


                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <Button
                            android:id="@+id/button1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="80sp"
                            android:layout_marginTop="20sp"
                            android:layout_marginRight="60sp"
                            android:layout_marginBottom="30sp"
                            android:gravity="center"
                            android:shadowColor="#4C4C4C"
                            android:shadowDx="1.0"
                            android:shadowDy="1.0"
                            android:shadowRadius="5"
                            android:text="Розклад"
                            android:textColor="#000000"
                            app:backgroundTint="#FFFFFF"
                            app:cornerRadius="10sp"
                            app:rippleColor="#000000"
                            app:strokeWidth="1sp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <View
                            android:id="@+id/view2"
                            android:layout_width="100sp"
                            android:layout_height="100sp"
                            android:layout_marginLeft="40sp"
                            android:layout_marginTop="10sp"
                            android:layout_marginBottom="50sp"
                            android:background="@xml/forms" />

                        <ImageView
                            android:id="@+id/imageView9"
                            android:layout_width="100sp"
                            android:layout_height="100sp"
                            android:layout_marginLeft="40sp"
                            android:layout_marginTop="10sp"
                            android:layout_marginBottom="50sp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/schedule" />

                    </RelativeLayout>

                </FrameLayout>

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:visibility="visible" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">


                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <Button
                            android:id="@+id/button2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="80sp"
                            android:layout_marginTop="10sp"
                            android:layout_marginRight="60sp"
                            android:layout_marginBottom="40sp"
                            android:gravity="center"
                            android:paddingLeft="40sp"
                            android:shadowColor="#4C4C4C"
                            android:shadowDx="1.0"
                            android:shadowDy="1.0"
                            android:shadowRadius="5"
                            android:text="Залiкова книжка"
                            android:textColor="#000000"
                            app:backgroundTint="#FFFFFF"
                            app:cornerRadius="10sp"
                            app:rippleColor="#000000"
                            app:strokeWidth="1sp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <View
                            android:id="@+id/view3"
                            android:layout_width="100sp"
                            android:layout_height="100sp"
                            android:layout_marginLeft="40sp"
                            android:layout_marginTop="10sp"
                            android:layout_marginBottom="50sp"
                            android:background="@xml/forms" />

                        <ImageView
                            android:id="@+id/imageView10"
                            android:layout_width="100sp"
                            android:layout_height="100sp"
                            android:layout_marginLeft="40sp"
                            android:layout_marginTop="10sp"
                            android:layout_marginBottom="50sp"
                            android:src="@drawable/offset" />

                    </RelativeLayout>

                </FrameLayout>

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:visibility="visible" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">


                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <Button
                            android:id="@+id/button3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="80sp"
                            android:layout_marginTop="10sp"
                            android:layout_marginRight="60sp"
                            android:layout_marginBottom="40sp"
                            android:gravity="center"
                            android:shadowColor="#4C4C4C"
                            android:shadowDx="1.0"
                            android:shadowDy="1.0"
                            android:shadowRadius="5"
                            android:text="Рейтинг"
                            android:textColor="#000000"
                            app:backgroundTint="#FFFFFF"
                            app:cornerRadius="10sp"
                            app:rippleColor="#000000"
                            app:strokeWidth="1sp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <View
                            android:id="@+id/view4"
                            android:layout_width="100sp"
                            android:layout_height="100sp"
                            android:layout_marginLeft="40sp"
                            android:layout_marginTop="10sp"
                            android:layout_marginBottom="50sp"
                            android:background="@xml/forms" />

                        <ImageView
                            android:id="@+id/imageView11"
                            android:layout_width="100sp"
                            android:layout_height="100sp"
                            android:layout_marginLeft="40sp"
                            android:layout_marginTop="10sp"
                            android:layout_marginBottom="50sp"
                            android:src="@drawable/raiting" />

                    </RelativeLayout>

                </FrameLayout>

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:visibility="visible" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">


                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <Button
                            android:id="@+id/button4"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="80sp"
                            android:layout_marginTop="10sp"
                            android:layout_marginRight="60sp"
                            android:layout_marginBottom="40sp"
                            android:gravity="center"
                            android:shadowColor="#4C4C4C"
                            android:shadowDx="1.0"
                            android:shadowDy="1.0"
                            android:shadowRadius="5"
                            android:text="Борги"
                            android:textColor="#000000"
                            app:backgroundTint="#FFFFFF"
                            app:cornerRadius="10sp"
                            app:rippleColor="#000000"
                            app:strokeWidth="1sp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <View
                            android:id="@+id/view5"
                            android:layout_width="100sp"
                            android:layout_height="100sp"
                            android:layout_marginLeft="40sp"
                            android:layout_marginTop="10sp"
                            android:layout_marginBottom="50sp"
                            android:background="@xml/forms" />

                        <ImageView
                            android:id="@+id/imageView12"
                            android:layout_width="100sp"
                            android:layout_height="100sp"
                            android:layout_marginLeft="40sp"
                            android:layout_marginTop="10sp"
                            android:layout_marginBottom="50sp"
                            android:src="@drawable/debts" />

                    </RelativeLayout>

                </FrameLayout>

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:visibility="visible" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">


                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <Button
                            android:id="@+id/button"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="80sp"
                            android:layout_marginTop="10sp"
                            android:layout_marginRight="60sp"
                            android:layout_marginBottom="40sp"
                            android:gravity="center"
                            android:paddingLeft="40sp"
                            android:shadowColor="#4C4C4C"
                            android:shadowDx="1.0"
                            android:shadowDy="1.0"
                            android:shadowRadius="5"
                            android:text="навчальний план"
                            android:textColor="#000000"
                            app:backgroundTint="#FFFFFF"
                            app:cornerRadius="10sp"
                            app:rippleColor="#000000"
                            app:strokeWidth="1sp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <View
                            android:id="@+id/view"
                            android:layout_width="100sp"
                            android:layout_height="100sp"
                            android:layout_marginLeft="40sp"
                            android:layout_marginTop="10sp"
                            android:layout_marginBottom="50sp"
                            android:background="@xml/forms" />

                        <ImageView
                            android:id="@+id/imageView8"
                            android:layout_width="100sp"
                            android:layout_height="100sp"
                            android:layout_marginLeft="40sp"
                            android:layout_marginTop="10sp"
                            android:layout_marginBottom="50sp"
                            android:src="@drawable/plan" />

                    </RelativeLayout>

                </FrameLayout>

            </LinearLayout>
        </LinearLayout>

    </ScrollView>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="6sp"
        android:background="?android:attr/listDivider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100sp"
        android:layout_weight="1"
        android:background="#FFFFFF"
        android:gravity="center">

        <ImageButton
            android:id="@+id/buidlingButton"
            android:layout_width="wrap_content"
            android:layout_height="100sp"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/toolbar_2" />

        <ImageView
            android:id="@+id/imageView14"
            android:layout_width="wrap_content"
            android:layout_height="100sp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="#3F51B5"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/toolbar_3" />

        <ImageButton
            android:id="@+id/proffButton"
            android:layout_width="wrap_content"
            android:layout_height="100sp"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/toolbar_1" />
    </LinearLayout>


</LinearLayout>