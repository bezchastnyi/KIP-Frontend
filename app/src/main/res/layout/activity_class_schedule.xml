<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000051"
    android:orientation="vertical"
    tools:context=".Class_schedule">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#000051"
            app:srcCompat="@drawable/backbutton" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Расписание Занятий"
            android:textColor="@color/white"
            android:textSize="36sp" />

    </LinearLayout>

    <View
        android:id="@+id/divider3"
        android:layout_width="match_parent"
        android:layout_height="10sp"
        android:background="?android:attr/listDivider"
        android:foreground="@android:drawable/bottom_bar" />

    <com.google.android.material.chip.ChipGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|center_horizontal|center_vertical"
        app:singleLine="false"
        app:singleSelection="true">
        android:text="TEST"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/chipMonday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autoText="false"
            android:gravity="center_horizontal"
            android:maxWidth="1sp"
            android:text="Понедельник"
            android:textAlignment="center"
            android:textSize="24sp" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipThuesday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autoText="false"
            android:gravity="center_horizontal"
            android:maxWidth="1sp"
            android:text="Вторник"
            android:textAlignment="center"
            android:textSize="24sp" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipWednesday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autoText="false"
            android:gravity="center_horizontal"
            android:maxWidth="1sp"
            android:text="Среда"
            android:textAlignment="center"
            android:textSize="24sp" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipThursday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autoText="false"
            android:gravity="center_horizontal"
            android:maxWidth="1sp"
            android:text="Четверг"
            android:textAlignment="center"
            android:textSize="24sp" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipFriday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autoText="false"
            android:gravity="center_horizontal"
            android:maxWidth="1sp"
            android:text="Пятница"
            android:textAlignment="center"
            android:textSize="24sp" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipSaturday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autoText="false"
            android:gravity="center_horizontal"
            android:maxWidth="1sp"
            android:text="Суббота"
            android:textAlignment="center"
            android:textSize="24sp" />

    </com.google.android.material.chip.ChipGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:gravity="center"
            android:text="парная"
            android:textColor="@color/white"
            android:textSize="36sp" />

        <Switch
            android:id="@+id/switchWeek"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/white"
            android:textOff="парная"
            android:textOn="непарная"
            android:textSize="36sp"
            tools:checked="false" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="непарная"
            android:textColor="@color/white"
            android:textSize="36sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="30sp" />

        <TextView
            android:id="@+id/textViewD1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:background="#5E5EFF"
            android:includeFontPadding="false"
            android:text="@string/Day1"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textViewD2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:background="#5E5EFF"
            android:includeFontPadding="false"
            android:text="@string/Day2"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textViewD3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:background="#5E5EFF"
            android:includeFontPadding="false"
            android:text="@string/Day3"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textViewD4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:background="#5E5EFF"
            android:includeFontPadding="false"
            android:text="@string/Day4"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textViewD5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:background="#5E5EFF"
            android:includeFontPadding="false"
            android:text="@string/Day5"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="24sp" />
    </LinearLayout>

</LinearLayout>